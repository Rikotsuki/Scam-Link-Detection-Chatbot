# Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# Python Service URL (for direct access if needed)
NEXT_PUBLIC_PYTHON_SERVICE_URL=http://localhost:8000

# Application Configuration
NEXT_PUBLIC_APP_NAME=PhishGuard
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_ANIME_CHARACTERS=true
NEXT_PUBLIC_ENABLE_3D_AVATARS=true
NEXT_PUBLIC_ENABLE_VOICE_CHAT=false 